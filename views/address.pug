extends layout

block content
  h1 Enter Delivery Address
  form(action=`/address/${dishId}`, method='POST')
    input(type='hidden', name='quantity', value=quantity)
    label(for='address') Address:
    textarea(id='address', name='address', required)
    label(for='flatNo') Flat No.:
    input(type='text', id='flatNo', name='flatNo')
    label(for='landmark') Landmark:
    input(type='text', id='landmark', name='landmark')
    label(for='pincode') Pincode:
    input(type='text', id='pincode', name='pincode', required)
    label(for='mobile') Mobile Number:
    input(type='tel', id='mobile', name='mobile', required)
    button(type='submit') Proceed to Payment
