extends layout

block content
  div.success-message
    h2.animate-celebration Order Placed Successfully! üéâ
    p Your delicious meal is being prepared with love by your neighbor.
    p You will receive updates on your order status, and payment will be collected upon delivery (Cash on Delivery).
    p Delivery typically takes 30-45 minutes depending on your location.
    div
      a(href='/orders') üìã View My Orders
    div
      a(href='/') üè† Continue Browsing

  script.
    // GSAP Celebration Animation
    gsap.registerPlugin();

    // Initial state
    gsap.set('.success-message h2', { opacity: 0, scale: 0.8 });
    gsap.set('.success-message p', { opacity: 0, y: 20 });
    gsap.set('.success-message a', { opacity: 0, y: 30 });

    // Celebration timeline
    const celebrationTl = gsap.timeline();

    celebrationTl
      .to('.success-message h2', {
        opacity: 1,
        scale: 1,
        duration: 0.8,
        ease: "back.out(1.7)"
      })
      .to('.success-message p', {
        opacity: 1,
        y: 0,
        duration: 0.6,
        stagger: 0.2,
        ease: "power2.out"
      }, "-=0.4")
      .to('.success-message a', {
        opacity: 1,
        y: 0,
        duration: 0.5,
        stagger: 0.1,
        ease: "power2.out"
      }, "-=0.3");

    // Add some fun confetti-like effect
    gsap.set('.success-message::before', { scale: 0 });
    gsap.to('.success-message::before', {
      scale: 1,
      duration: 0.8,
      delay: 0.5,
      ease: "back.out(1.7)"
    });
