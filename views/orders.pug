extends layout

block content
  h1 All Orders
  if orders.length > 0
    table
      thead
        tr
          th Dish
          th Buyer
          th Address
          th Quantity
          th Total Price
          th Status
          th Date
      tbody
        each order in orders
          tr
            td
              if order.dish.image
                img(src=order.dish.image, alt=order.dish.name, style='width: 100px; height: 80px; object-fit: cover;')
              br
              = order.dish.name
            td= order.buyer
            td= order.address
            td= order.quantity
            td â‚¹#{order.totalPrice}
            td= order.status
            td= order.createdAt.toDateString()
  else
    p No orders yet.
  a(href='/') Back to Home
