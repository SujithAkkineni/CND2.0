extends layout

block content
  h1 Payment Details
  if dish.image
    img(src=dish.image, alt=dish.name, style='width: 300px; height: 200px; object-fit: cover;')
  p Dish: #{dish.name}
  p Price per unit: ₹#{dish.price}
  p Quantity: #{quantity}
  p Total Price: ₹#{dish.price * quantity}
  p Delivery Address: #{address}
  p <strong>Payment Method: Cash on Delivery Only</strong>

  form(action=`/payment/${dish._id}`, method='POST')
    input(type='hidden', name='address', value=address)
    input(type='hidden', name='quantity', value=quantity)
    label(for='buyer') Your Name:
    input(type='text', id='buyer', name='buyer', required)
    button(type='submit') Confirm Order (Cash on Delivery)
